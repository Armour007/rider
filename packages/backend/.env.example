# Backend Environment Variables

# Server
NODE_ENV=development
PORT=3000

# PostgreSQL (Transactional Data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=uma_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB (Metadata & Missions)
MONGODB_URI=mongodb://localhost:27017/uma_platform

# ONDC Configuration
ONDC_GATEWAY_URL=https://gateway.ondc.org
ONDC_BAP_ID=uma.ondc.in
ONDC_BAP_URI=https://api.uma.com
ONDC_SUBSCRIBER_ID=uma_bap
ONDC_SUBSCRIBER_URL=https://api.uma.com/ondc

# Firebase (Authentication & Push Notifications)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"uma-platform"}

# JWT Secret
JWT_SECRET=your-secret-key-here-change-in-production

# Razorpay (Payments)
RAZORPAY_KEY_ID=rzp_test_key
RAZORPAY_KEY_SECRET=rzp_test_secret

# Logging
LOG_LEVEL=debug
